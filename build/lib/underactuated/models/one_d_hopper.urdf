<?xml vertsion="1.0"?>

<robot name="OneDHopper">

  <link name="leg"> 

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="1" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size=".04 .2 .96" />
      </geometry>
      <material name="grey">
        <color rgba=".5 .5 .5 1" />
      </material>
    </visual>

    <visual>
      <origin xyz="0 0 .5" />
      <geometry>
        <box size=".12 .2 .04" />
      </geometry>
      <material name="grey">
        <color rgba=".5 .5 .5 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 .5" />
      <geometry>
        <box size=".12 .2 .04" />
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 -.5" />
      <geometry>
        <box size=".12 .2 .04" />
      </geometry>
      <material name="grey">
        <color rgba=".5 .5 .5 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -.5" />
      <geometry>
        <box size=".12 .2 .04" />
      </geometry>
    </collision>

  </link>

  <link name="body">

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="10" />
    </inertial>

    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <box size=".8 .2 .2" />
      </geometry>
      <material name="MITred">
        <color rgba=".6 .2 .2 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 0" />
      <geometry>
        <box size=".8 .2 .2" />
      </geometry>
    </collision>

  </link>

  <link name="ground">

    <visual>
      <origin xyz="0 0 -1" />
      <geometry>
        <box size="3 1 2" />
      </geometry>
      <material name="green">
        <color rgba="0 .5 0 1" />
      </material>
    </visual>

    <collision>
      <origin xyz="0 0 -1" />
      <geometry>
        <box size="3 1 2" />
      </geometry>
    </collision>
    
  </link>

  <!-- dummy link to allow collisions between body and leg -->
  <link name="leg_parent"></link>

  <!-- dummy joint to allow collisions between body and leg -->
  <joint name="leg_parent_is_body" type="fixed">
    <parent link="body" />
    <child link="leg_parent" />
  </joint>

  <joint name="z_b" type="prismatic">
  	<origin xyz="0 0 .9" />
    <parent link="world" />
    <child link="body" />
    <axis xyz="0 0 1" />
  </joint>

  <joint name="l" type="prismatic">
    <origin xyz="0 0 -.38" />
    <parent link="leg_parent" />
    <child link="leg" />
    <axis xyz="0 0 1" />
    <!-- <limit lower="0" upper="0.76" /> -->
  </joint>

  <joint name="ground_is_world" type="fixed">
    <parent link="world" />
    <child link="ground" />
  </joint>

  <transmission type="SimpleTransmission" name="position_actuator">
    <actuator name="precompression_force" />
    <joint name="l" />
  </transmission>

</robot>
